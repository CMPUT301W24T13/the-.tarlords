<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/edit_alert_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/event_name" />
    <EditText
        android:id="@+id/edit_text_event_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_my_event"
        android:inputType="text"/>

    <TextView
        android:id="@+id/edit_text_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/alert_message" />

    <EditText
        android:id="@+id/edit_text_alert_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_my_message"
        android:inputType="textLongMessage" />

</LinearLayout>
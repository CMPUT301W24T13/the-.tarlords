<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/eventDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:visibility="visible"
        tools:context=".ui.event.EventDetailsFragment">



        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="336dp"
            android:layout_height="170dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="18dp"
            android:adjustViewBounds="true"
            android:background="@drawable/rounded_corners_r"
            android:scaleType="fitCenter"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/tv_event_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.48"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_event_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="204dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/rounded_corners_r"
            android:fontFamily="@font/helvetica_bold"
            android:gravity="center"
            android:hint="BBQ"
            android:textAllCaps="true"
            android:textColor="#2d030f"
            android:textSize="30sp"
            android:textStyle="bold"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/textView4"
            android:layout_width="42dp"
            android:layout_height="33dp"
            android:layout_marginTop="16dp"
            android:layout_weight="0.10"
            android:fontFamily="@font/helvetica"
            android:text="----"
            android:textColor="#4d0a2a"
            android:textSize="20sp"
            android:textStyle="normal"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.549"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_event_name" />

        <TextView
            android:id="@+id/tv_event_startDate"
            android:layout_width="184dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="0.5"
            android:background="@drawable/rounded_corners_r"
            android:fontFamily="@font/helvetica"
            android:gravity="center"
            android:text="July 4, 2024"
            android:textColor="#4d0a2a"
            android:textSize="20sp"
            android:visibility="visible"
            app:layout_constraintEnd_toStartOf="@+id/textView4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_event_name" />

        <TextView
            android:id="@+id/tv_event_endDate"
            android:layout_width="184dp"
            android:layout_height="50dp"
            android:layout_marginEnd="4dp"
            android:layout_weight="0.5"
            android:background="@drawable/rounded_corners_r"
            android:fontFamily="@font/helvetica"
            android:gravity="center"
            android:text="July 4, 2024"
            android:textColor="#4d0a2a"
            android:textSize="20sp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/tv_event_name" />

        <LinearLayout
            android:id="@+id/ll_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="25dp"
            android:orientation="horizontal"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_event_endDate">

        </LinearLayout>

        <TextView
            android:id="@+id/tv_event_location"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="124dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/rounded_corners_r"
            android:fontFamily="@font/helvetica"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="My backyard"
            android:textColor="#4d0a2a"
            android:textSize="23sp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_event_name" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="261dp"
            android:layout_height="42dp"
            android:layout_marginTop="180dp"
            android:fontFamily="@font/helvetica_rounded_bold"
            android:gravity="center"
            android:text="Additional Information"
            android:textColor="#2d030f"
            android:textSize="23sp"
            android:textStyle="bold"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.133"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_event_name" />

        <TextView
            android:id="@+id/additional_info"
            android:layout_width="400dp"
            android:layout_height="67dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="220dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/rounded_corners_r"
            android:fontFamily="@font/helvetica"
            android:hint="This event is about..."
            android:textColor="#4d0a2a"
            android:textSize="18sp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_event_name" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="296dp"
            android:fontFamily="@font/helvetica"
            android:text="Max Attendees: "
            android:textColor="#4d0a2a"
            android:textSize="20sp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.21"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_event_name" />

        <TextView
            android:id="@+id/tv_max_attendees"
            android:layout_width="45dp"
            android:layout_height="36dp"
            android:layout_marginTop="296dp"
            android:layout_marginEnd="200dp"
            android:background="@drawable/rounded_corners_r"
            android:clickable="false"
            android:ems="10"
            android:enabled="false"
            android:fontFamily="@font/helvetica"
            android:inputType="number"
            android:textColor="#4d0a2a"
            android:textSize="20sp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintStart_toEndOf="@+id/cb_max_attendees"
            app:layout_constraintTop_toBottomOf="@+id/tv_event_name" />

        <ImageView
            android:id="@+id/iv_checkin_details"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="44dp"
            android:background="@color/white"
            android:src="@drawable/qr_code_scan_svgrepo_com"
            android:visibility="visible"
            app:layout_constraintEnd_toStartOf="@+id/iv_info_details"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_checkin_details"
            app:srcCompat="@drawable/qr_code_scan_svgrepo_com" />

        <ImageView
            android:id="@+id/iv_info_details"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="56dp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_info_details"
            app:srcCompat="@drawable/qr_code_scan_svgrepo_com" />

        <TextView
            android:id="@+id/tv_checkin_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="367dp"
            android:fontFamily="@font/helvetica"
            android:text="Check In QR: "
            android:textColor="#4d0a2a"
            android:textSize="16sp"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />


        <TextView
            android:id="@+id/tv_info_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="356dp"
            android:layout_marginEnd="40dp"
            android:fontFamily="@font/helvetica"
            android:text="Event Info QR:"
            android:textColor="#4d0a2a"
            android:textSize="16sp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.683"
            app:layout_constraintStart_toEndOf="@+id/tv_checkin_details"
            app:layout_constraintTop_toBottomOf="@+id/tv_max_attendees" />

        <ImageView
            android:id="@+id/iv_poster"
            android:layout_width="159dp"
            android:layout_height="227dp"
            android:layout_marginTop="446dp"
            android:layout_marginBottom="68dp"
            android:src="@drawable/ic_menu_gallery"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.138"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_event_name"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tv_event_startTime"
            android:layout_width="184dp"
            android:layout_height="50dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="12dp"
            android:layout_weight="0.45"
            android:background="@drawable/rounded_corners_r"
            android:fontFamily="@font/helvetica"
            android:gravity="center"
            android:text="9:35 PM"
            android:textColor="#4d0a2a"
            android:textSize="20sp"
            android:visibility="visible"
            app:layout_constraintEnd_toStartOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/tv_event_name" />

        <TextView
            android:id="@+id/tv_event_endTime"
            android:layout_width="184dp"
            android:layout_height="50dp"
            android:layout_marginTop="62dp"
            android:layout_marginEnd="16dp"
            android:layout_weight="0.45"
            android:background="@drawable/rounded_corners_r"
            android:fontFamily="@font/helvetica"
            android:gravity="center"
            android:text="9:35 PM"
            android:textColor="#4d0a2a"
            android:textSize="20sp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/tv_event_name" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="45dp"
            android:layout_height="26dp"
            android:layout_marginTop="73dp"
            android:layout_weight="0.10"
            android:fontFamily="@font/helvetica"
            android:text="----"
            android:textColor="#4d0a2a"
            android:textSize="20sp"
            android:textStyle="normal"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.553"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_event_name" />

        <TextView
            android:id="@+id/countOfSignUps"
            android:layout_width="45dp"
            android:layout_height="36dp"
            android:layout_marginTop="348dp"
            android:text="TextView"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_event_name" />

        <TextView
            android:id="@+id/countOfCheckIns"
            android:layout_width="45dp"
            android:layout_height="36dp"
            android:layout_marginTop="8dp"
            android:text="TextView"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/countOfSignUps" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="124dp"
            android:layout_height="33dp"
            android:layout_marginStart="21dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="56dp"
            android:background="@drawable/rounded_corners_r"
            android:fontFamily="@font/helvetica"
            android:text="checked in"
            android:textColor="#000000"
            android:textSize="20sp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/countOfCheckIns"
            app:layout_constraintTop_toBottomOf="@+id/textView10" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="124dp"
            android:layout_height="33dp"
            android:layout_marginStart="21dp"
            android:layout_marginTop="348dp"
            android:layout_marginEnd="56dp"
            android:background="@drawable/rounded_corners_r"
            android:fontFamily="@font/helvetica"
            android:text="signed up"
            android:textColor="#000000"
            android:textSize="20sp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/countOfSignUps"
            app:layout_constraintTop_toBottomOf="@+id/tv_event_name" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="160dp"
            android:layout_height="46dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="344dp"
            android:layout_marginEnd="2dp"
            android:src="@drawable/participants"
            android:visibility="visible"
            app:layout_constraintEnd_toStartOf="@+id/countOfSignUps"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_event_name" />

        <ImageView
            android:id="@+id/mapImage"
            android:layout_width="159dp"
            android:layout_height="227dp"
            android:layout_marginTop="446dp"
            android:layout_marginEnd="56dp"
            android:src="@drawable/map"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_event_name"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/shareQrCode"
            android:layout_width="269dp"
            android:layout_height="51dp"
            android:layout_marginTop="23dp"
            android:text="SHARE QR CODE"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_checkin_details" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
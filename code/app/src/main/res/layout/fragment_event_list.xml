<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/eventList"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="4dp"
    android:layout_marginTop="2dp"
    android:layout_marginRight="4dp"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.home.EventListFragment">
    <!--TODO : Move FAB (QR button) into fragment_event_list instead of app_bar_main-->

    <TextView
        android:id="@+id/pinnedTitle"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:fontFamily="@font/helvetica_bold"
        android:gravity="center"
        android:text="Upcoming Events"
        android:textColor="#2D030F"
        android:textSize="40sp" />

    <ListView
        android:id="@+id/eventListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:layout_editor_absoluteX="0dp"
        android:divider="@color/white"
        android:dividerHeight="12dp"
        tools:layout_editor_absoluteY="-193dp"
        tools:listitem="@layout/fragment_event_list_item" />
</LinearLayout>
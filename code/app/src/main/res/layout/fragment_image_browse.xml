<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/imageList"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ui.image.ImageBrowseFragment">

    <TextView
        android:id="@+id/tv_browse_images_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"

        android:text="@string/poster_browse_header"
        android:fontFamily="@font/helvetica_bold"
        android:textSize="30sp"
        android:textColor="@color/plum_dark"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_browse_images_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:text="@string/poster_browse_subtitle"
        android:fontFamily="@font/helvetica"
        android:textSize="18sp"
        android:textColor="@color/bordeaux_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_browse_images_title"/>

    <ListView
        android:id="@+id/imageListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:paddingBottom="100dp"

        tools:listitem="@layout/fragment_image_list_item"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_browse_images_subtitle"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/scan_qr_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        android:contentDescription="@string/qr_scan_fab"
        app:backgroundTint="@color/peach_contrast"
        app:fabCustomSize="70dp"
        app:fabSize="normal"
        app:maxImageSize="35dp"
        app:srcCompat="@drawable/qr_scan" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/profile_top_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:theme="@style/Theme.Thetarlords.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/actionBar"
            app:popupTheme="@style/Theme.Thetarlords.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/edit_profile_info"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/profile_top_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0" >

        <EditText
            android:id="@+id/edit_text_first_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="25dp"
            android:ems="10"
            android:fontFamily="@font/helvetica"
            android:hint="@string/first_name"
            android:inputType="text"
            android:textSize="20sp"
            android:textStyle="bold"

            android:clickable="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/edit_text_last_name"/>

        <EditText
            android:id="@+id/edit_text_last_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="25dp"
            android:ems="10"
            android:fontFamily="@font/helvetica"
            android:hint="@string/last_name"
            android:inputType="text"
            android:textSize="20sp"
            android:textStyle="bold"

            android:clickable="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edit_text_first_name"
            app:layout_constraintBottom_toTopOf="@+id/edit_text_phone"/>

        <EditText
            android:id="@+id/edit_text_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="25dp"
            android:ems="10"
            android:fontFamily="@font/helvetica"
            android:hint="@string/phone_number"
            android:inputType="phone"
            android:textSize="20sp"
            android:textStyle="bold"

            android:clickable="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_last_name"
            app:layout_constraintBottom_toTopOf="@+id/edit_text_email"/>

        <EditText
            android:id="@+id/edit_text_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="310dp"
            android:ems="10"
            android:fontFamily="@font/helvetica"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:textSize="20sp"
            android:textStyle="bold"

            android:clickable="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_phone" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/button_edit_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:contentDescription="@string/edit_profile"
            android:src="@android:drawable/ic_menu_edit"
            app:fabCustomSize="70dp"
            app:fabSize="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/fab_margin"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/fab_margin"
            app:maxImageSize="35dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profile_top_bar"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/side_nav_bar"
        android:backgroundTintMode="src_atop"
        android:foregroundGravity="bottom"
        android:rotationX="0"
        android:theme="@style/Theme.Material3.Dark"
        app:circularflow_radiusInDP="20"
        app:layout_constraintTop_toBottomOf="@+id/app_bar_margin"
        app:layout_constraintBottom_toTopOf="@id/edit_profile_info"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >

        <ImageView
            android:id="@+id/image_view_profile"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="216dp"
            android:contentDescription="@string/profile_picture"
            android:src="@drawable/profile_icon"
            app:layout_constraintTop_toTopOf="@+id/profile_top_bar"
            app:layout_constraintBottom_toBottomOf="@+id/profile_top_bar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <Button
            android:id="@+id/button_add_profile_photo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="216dp"
            android:text="@string/add_profile_photo"
            android:textSize="20sp"
            android:fontFamily="@font/helvetica_rounded_bold"
            android:background="@drawable/profile_icon"
            app:layout_constraintTop_toTopOf="@id/image_view_profile"
            app:layout_constraintBottom_toBottomOf="@id/image_view_profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
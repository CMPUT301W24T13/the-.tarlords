<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Thetarlords" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/aubergine_main</item>
        <item name="colorPrimaryVariant">@color/bordeaux_medium</item>
        <item name="colorPrimaryDark">@color/plum_dark</item>
        <item name="colorOnPrimary">@color/plum_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/mauve_medium_light</item>
        <item name="colorSecondaryVariant">@color/cold_grey_light</item>
        <item name="colorOnSecondary">@color/cold_grey_light</item>
        <!-- Accent brand color. -->
        <item name="colorAccent">@color/peach_contrast</item>
        <item name="colorButtonNormal">@color/peach_contrast</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
        <!-- Customize your theme here. -->
        <item name="android:titleTextColor">?attr/colorSecondaryVariant</item>
        <item name="android:subtitleTextColor">?attr/colorSecondary</item>
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
        <item name="android:textColorHint">?attr/colorPrimaryVariant</item>
        <item name="android:colorBackground">?attr/colorPrimaryDark</item>
        <item name="android:buttonTint">?attr/colorAccent</item>
    </style>
</resources>
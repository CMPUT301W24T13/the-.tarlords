<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Thetarlords" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/aubergine_main</item>
        <item name="colorPrimaryVariant">@color/bordeaux_medium</item>
        <item name="colorPrimaryDark">@color/plum_dark</item>
        <item name="android:textColorPrimary">@color/plum_dark</item>
        <item name="android:textColorPrimaryInverse">@color/cold_grey_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/cold_grey_light</item>
        <item name="colorSecondaryVariant">@color/mauve_medium_light</item>
        <item name="colorOnSecondary">@color/cold_grey_light</item>
        <!-- Accent brand color. -->
        <item name="colorAccent">@color/peach_contrast</item>
        <item name="colorButtonNormal">@color/peach_contrast</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:titleTextColor">?attr/colorPrimaryDark</item>
        <item name="android:subtitleTextColor">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:textColorHint">?attr/colorSecondaryVariant</item>
        <item name="android:colorBackground">?attr/colorOnPrimary</item>
        <item name="android:buttonTint">?attr/colorAccent</item>
        <item name="android:fontFamily">@font/helvetica_bold</item>
        <item name="android:font">@font/helvetica</item>
    </style>

    <style name="Theme.Thetarlords.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Thetarlords.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Thetarlords.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>